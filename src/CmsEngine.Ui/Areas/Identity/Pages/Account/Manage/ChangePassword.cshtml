@page
@model ChangePasswordModel
@{
    ViewData["PageTitle"] = "Change password";
    ViewData["PanelTitle"] = "Change password";
}

@section Breadcrumb {
    <ol class="breadcrumb my-0">
        <li class="breadcrumb-item"><a href="~/cms">Dashboard</a></li>
        <li class="breadcrumb-item active">@ViewBag.PageTitle</li>
    </ol>
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-10 col-xl-8">
        <div class="card">
            <div class="card-header">
                <strong>@ViewBag.PanelTitle</strong>
            </div>
            <form method="post">
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row mb-3">
                        <label asp-for="Input.OldPassword" class="col-md-2 form-control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.OldPassword" class="form-control" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="Input.NewPassword" class="col-md-2 form-control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="Input.ConfirmPassword" class="col-md-2 form-control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="cil-save"></i> Save</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
