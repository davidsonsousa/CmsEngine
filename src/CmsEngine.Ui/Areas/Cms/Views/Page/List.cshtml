@section PageHead {
    @{
        await Html.RenderPartialAsync("_DataTablesStyles");
    }
}

@section Breadcrumb {
    <ol class="breadcrumb my-0">
        <li class="breadcrumb-item"><a href="~/cms">Dashboard</a></li>
        <li class="breadcrumb-item active">@ViewBag.PageTitle</li>
    </ol>
}

<div class="card">
    @{
        await Html.RenderPartialAsync("_DataTableCardHeader");
    }
    <div class="card-body">
        <table id="table-list" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th><input type="checkbox" class="bulk-delete-select-all" /></th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Slug</th>
                    <th>Author</th>
                    <th>Published on</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Slug</th>
                    <th>Author</th>
                    <th>Published on</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_DataTablesScripts");
    }

    <script type="text/javascript">
        $(function () {
            CmsEngine.Configure.DataTable("page");
        });
    </script>
}
